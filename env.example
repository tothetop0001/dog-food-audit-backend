# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://postgres:Beautifulmorning@localhost:5432/dog_food_db
DATABASE_URL_ASYNC=postgresql+asyncpg://postgres:Beautifulmorning@localhost:5432/dog_food_db

# Redis Configuration (for Celery) - Optional: can use SQLite for development
REDIS_URL=redis://localhost:6379/0
# Alternative for development without Redis:
# CELERY_BROKER_URL=memory://
# CELERY_RESULT_BACKEND=memory://

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Dog Food API
VERSION=0.1.0
DEBUG=True

# Security
SECRET_KEY=your-secret-key-here
